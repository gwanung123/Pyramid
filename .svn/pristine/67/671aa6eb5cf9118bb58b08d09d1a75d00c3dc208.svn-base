/***************************************
 * file : /Contents/containerGrid.html
 * tree
 **************************************/

.nx-containerGrid {
   height: 100%;
}

/**
 * menu
 */
.nx-containerGrid-top {
   height: 40px;
}

.nx-containerGrid-top .k-menu-scroll-wrapper {
   height: 37px !important;
   width: auto !important;
}

.nxContainerGridTop {
   width: 100% !important;
   height: 100% !important;
   background-color: whitesmoke;
   background-image: none !important;
   background-position: 0% 0% !important;
   border-width: 0px;
}

.nxContainerGridTop .k-item {
   width: 100px;
   text-align: center;
   font-weight: 600;
   color: #fff;
   background-color: #4dc03d;
   border-right-width: 0px !important;
   margin: 4px 1px;
}

/**
 * grid
 */

.nxContainerGridBottom {
   border-color: #fff;
   position: absolute;
   bottom: 93px;
   top: 0px;
   left: 0px;
   right: 0px;
   border: 0px;
   margin-top: 70px;
}

.nxContainerGridBottom .k-grid-toolbar {
   background-color: #fff;
   background-image: none;
}

.nxContainerGridBottom .k-grid-header {
   background-color: #5a5d63;
   background-image: none;
}

.nxContainerGridBottom .k-grid-header th {
   background-color: #5a5d63;
   background-image: none;
   color: #fff;
}

.nxContainerGridBottom .k-grid-content-locked {
   border-color: #aaa;
   border-right-width: 2px;
   height: 100% !important;
}

.nxContainerGridBottom .k-grid-content {
   position: absolute;
   top: 62px;
   bottom: 0px;
}

.nxContainerGridBottom .k-pager-wrap {
   background-color: #5a5d63;
   background-image: none;
   color: #fff;
   position: absolute;
   width: 100%;
   height: 25px;
   top: 100%;
   bottom: 0px;
   right: 0px;
   left: 0px;
}

.nxContainerGridBottom a.k-link:link {
   color: #fff;
}

.nxContainerGridBottom tbody .k-button {
   min-width: 20px !important;
   padding-left: 15px;
   padding-right: 0px;
}

.nxContainerGridBottom tbody .k-state-selected {
   background-color: #fff;
   color: #2e2e2e;
   font-weight: 600;
}

.nxContainerGridBottom tr:hover {
   background-color: #868e96;
}

.nxContainerGridBottom td.k-state-selected:hover, .nxContainerGridBottom tr.k-state-selected:hover {
   background-color: #868e96;
}

/* override absolute positioning styles of the validator messages */
.nxContainerGridBottom .k-tooltip {
   position: static;
   margin: 7px 0px !important;
   border: 0px;
   padding: 5px 5px;
}

/* hide validator tooltip callouts */
.nxContainerGridBottom .k-tooltip .k-callout {
   display: none;
}

