 * tree
 **************************************/

.nx-containerGridH {
   height: 100%;
}

.nx-containerGridH-splitter {
   height: 100%;
   border: 0px;
   /* overflow: hidden; */
}

.nx-containerGridH-splitter > .k-splitbar {
}

.nx-containerGridH-title {
   color: #fff;
   padding: 5px 15px;
   margin-bottom: 0px;
   font-weight: 600;
   border-bottom-color: #fff;
   border-bottom-style: double;
   border-bottom-width: 3px;
   text-align: center;
   background-color: #5a5d63;
}

.nx-containerGridH-top,
.nx-containerGridH-bottom {
   /* overflow: hidden !important; */
   bottom: 0px;
   right: 0px;
   left: 0px;
}

/**
 * left grid
 */
/*
.k-grid-content {
   position: absolute;
   top: 62px;
   bottom: 0px;
}
*/

.nxContainerGridHTop {
   border-color: #fff;
   position: absolute;
   bottom: 35px;
   top: 35px;
   left: 0px;
   right: 0px;
}

.nxContainerGridHTop .k-header {
   background-color: #fff;
   background-image: none;
}

.nxContainerGridHTop .k-grid-header {
   background-color: #5a5d63;
   background-image: none;
}

.nxContainerGridHTop .k-grid-header th {
   background-color: #5a5d63;
   background-image: none;
   color: #fff;
}

.nxContainerGridHTop .k-grid-content-locked {
   border-color: #aaa;
   border-right-width: 2px;
}

.nxContainerGridHTop .k-grid-content {
   position: absolute;
   top: 62px;
   bottom: 0px;
}

.nxContainerGridHTop .k-pager-wrap {
   background-color: #5a5d63;
   background-image: none;
   color: #fff;
   position: absolute;
   height: 25px;
   top: 100%;
   bottom: 0px;
   right: 0px;
   left: 0px;
}

.nxContainerGridHTop a.k-link:link {
   color: #fff;
}

.nxContainerGridHTop tbody .k-button {
   min-width: 20px !important;
   padding-left: 15px;
   padding-right: 0px;
}

.nxContainerGridHTop tbody .k-state-selected {
   background-color: #fff;
   color: #2e2e2e;
   font-weight: 600;
}

.nxContainerGridHTop tr:hover {
   background-color: #fff;
}

.nxContainerGridHTop td.k-state-selected:hover, .nxContainerGridHTop tr.k-state-selected:hover {
   background-color: #fff;
}

/* override absolute positioning styles of the validator messages */
.nxContainerGridHTop .k-tooltip {
   position: static;
   margin: 7px 0px !important;
   border: 0px;
   padding: 5px 5px;
}

/* hide validator tooltip callouts */
.nxContainerGridHTop .k-tooltip .k-callout {
   display: none;
}


