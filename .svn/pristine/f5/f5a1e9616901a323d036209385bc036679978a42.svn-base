/**
 * sidebar
 */
.nx-sidebar-container {
   background-color: rgb(51, 51, 51);
   position: fixed;
   top: 56px;
   bottom: 0px;
   width: 70px;
   z-index: 20000;
}

.nx-sidebar {
   text-align: center;
}

.nx-sidebar-resource {
   background-color: #000000;
}

.nx-btn-side-offset1 { background-position: 0 0; }
.nx-btn-side-offset2 { background-position: 0 -50px; }
.nx-btn-side-offset3 { background-position: 0 -125px; }
.nx-btn-side-offset4 { background-position: 0 -190px; }
.nx-btn-side-offset5 { background-position: 0 -250px; }
.nx-btn-side-offset6 { background-position: 0 -325px; }
.nx-btn-side-offset7 { background-position: 0 -385px; }
.nx-btn-side-offset8 { background-position: 0 -450px; }
.nx-btn-side-offset9 { background-position: 0 -450px; }
.nx-btn-side-offset10 { background-position: 0 -450px; }

.nx-sidebar ul li a {
   width: 70px;
   background-image: url(../img/nexus_icon_side.png);
   color: #FFF;
   text-transform: uppercase;
   display: inline-block;
   font-weight: 600;
   font-size: 12px;
   padding: 30px 5px 10px 5px;
   text-shadow: none;
   text-decoration: none;
}

.nx-sidebar-submenu {
   font-size: 12px;
   font-weight: 600;
   text-transform: uppercase;
   background-color: rgb(51, 51, 51);
   color: #fff;
   text-align: left;
}

#nx-sidebar-menu5,
#nx-sidebar-menu6,
#nx-sidebar-menu9 {
   border: 0px;
}

#nx-sidebar-menu5 li a,
#nx-sidebar-menu6 li a,
#nx-sidebar-menu9 li a {
   width: 70px;
   background-color: rgb(51, 51, 51);
   background-image: url(../img/nexus_icon_side.png);
   color: #FFF !important;
   text-transform: uppercase;
   display: inline-block !important;
   font-weight: 600;
   font-size: 12px;
   padding:  30px 0px 10px 0px !important;
   text-shadow: none;
   text-decoration: none;
}

.nx-sidebar ul li a:hover,
{
   background-color: #6d6d6d;
}

