/***************************************
 * bootstrap
 **************************************/
.container, .container-fluid {
   height: 100%;
   display: table;
}

/***************************************
 * kendo
 **************************************/
/* progress */
div.k-loading-mask
{
   z-index: 20001; /* must be larger than the z-index:2 of #container */
}

.k-grid {
   font-size: 12px;
}

.k-tooltip {
   margin-top: 8px;
   font-family: 'Open Sans', sans-serif;
   font-size: 14px;
   font-weight: 600;
   color: #808080 !important;
}

.k-window {
   right: 0px;
}

.k-window-titlebar {
   background-color: #5a5d63;
   background-image: none;
   color: #fff;
   border-color: #5a5d63;
   font-size: 16px;
   font-weight: 600;
}

/* Info template */
.k-notification-info.k-group {
   background: rgba(0%,0%,0%,.7);
   color: #fff;
}
.nx-notify-info {
   width: 450px;
   height: 150px;
}
.nx-notify-info h3 {
   font-size: 1em;
   padding: 32px 10px 5px;
}
.nx-notify-info img {
   float: left;
   margin: 30px 15px 30px 30px;
}

/* Error template */
.k-notification-error.k-group {
   background: rgba(100%,0%,0%,.7);
   color: #ffffff;
}
.nx-notify-error {
   width: 400px;
   height: 150px;
}
.nx-notify-error h3 {
   font-size: 1em;
   padding: 32px 10px 5px;
}
.nx-notify-error p {
   margin-bottom: 5px;
   font-size: 12px;
}
.nx-notify-error img {
   float: left;
   margin: 23px 15px 90px 30px;
}

/* Success template */
.k-notification-upload-success.k-group {
   background: rgba(0%,60%,0%,.7);
   color: #fff;
}
.nx-notify-success {
   width: 240px;
   height: 100px;
   padding: 0 30px;
   line-height: 100px;
}
.nx-notify-success h3 {
   font-size: 1.7em;
   font-weight: normal;
   display: inline-block;
   vertical-align: middle;
}
.nx-notify-success img {
   display: inline-block;
   vertical-align: middle;
   margin-right: 10px;
}

/* Show Lines between Nodes */
.k-treeview .k-top,
.k-treeview .k-mid,
.k-treeview .k-bot {
  background-image: url('http://aspnet-skins.telerikstatic.com/mvc/2012.2.607/Default/treeview-nodes.png');
  background-repeat: no-repeat;
  margin-left: -16px;
  padding-left: 16px;
}

.k-treeview .k-item { background-image: url('http://aspnet-skins.telerikstatic.com/mvc/2012.2.607/Default/treeview-line.png'); }
.k-treeview .k-last { background-image: none; }

.k-treeview .k-top { background-position: -91px 0; }
.k-treeview .k-bot { background-position: -69px -22px; }
.k-treeview .k-mid { background-position: -47px -44px; }
.k-treeview .k-last .k-top { background-position: -25px -66px; }
.k-treeview .k-group .k-last .k-bot { background-position: -69px -22px; }

.k-treeview .k-item {
  background-repeat: no-repeat;
}

.k-treeview .k-first {
  background-repeat: no-repeat;
  background-position: 0 16px;
}


/***************************************
 * global
 **************************************/
 * {
   font-family: 'Open Sans', sans-serif;
}

html {
   height: 100%;
}

body {
   height: 100%;
}

ul, li, ol {
   padding: 0;
   margin: 0;
   list-style: none;
}

/***************************************
 * file : monitor.html
 **************************************/

.nx-body {
   padding-top: 56px;
}

/*-------------------------------
   top
-------------------------------*/
#nx-top {
   background-color: #fff;
   box-shadow: 0 1px 4px #c1c1c1;
   position: fixed;
   top: 0;
   right: 0;
   left: 0;
   z-index: 1030;
}

.nx-top-title {
   color: #868686;
   font-size: 20px;
   font-weight: 300;
   text-shadow: none;
   letter-spacing: 1px;
}

.nx-brand {
   background: url(../img/ci_ipecs.png) no-repeat 22px 50%;
   padding-left: 152px;
   margin: 0 !important;
}

.nx-user-info {
   padding-top: 15px;
   line-height: 16px;
   height: 34px;
}

.nx-user-id {
   padding-right: 3px;
   font-family: 'Open Sans', sans-serif;
   font-size: 14px;
   font-weight: 600;
   color: #808080;
}

.nx-btn-logout {
   font-size: 12px;
   padding-bottom: 2px;
   padding-top: 2px;
}

/*-------------------------------
   others
-------------------------------*/

.nx-others-table {
   height: 100%;
}

.nx-contents-container {
   padding-left: 70px;
   height: 100%;
   border: 0px;
   overflow: hidden;
}

.nx-contents-container > .k-splitbar {
   border-top-style: hidden;
   border-bottom-color: rgb(175, 21, 21);
   border-bottom-style: dotted;
   height: 6px;
   padding-top: 2px;
   background-color: #ff7953;
   padding-left: 70px;
}

.nx-contents-body {
}


