*/

.nxContainerCampaignCenter {
   border-color: #fff;
   position: absolute;
   bottom: 0px;
   top: 0px;
   left: 0px;
   right: 0px;
   border: 0px;
   margin-top: 35px;
   height: 90.5%;
}


/******* toolbar ********/
.nxContainerCampaignCenter .k-grid-toolbar {
   padding: .6em 1.3em .6em .4em;
}

.nxContainerCampaignCenter .nx-ccc-title {
   padding-left: 1.5em;
   padding-right: 0.5em;
   font-weight: 600;
}

.nxContainerCampaignCenter .nx-ccc-input1 {
   padding-bottom: 1em;
}

.nxContainerCampaignCenter .nx-ccc-search-button {
   display: inline-block;
}

.nxContainerCampaignCenter .nx-ccc-search-button .nx-search-button {
   width: 150px;
   font-weight: 600;
   float: right;
   margin: 0 20px;
}

.nxContainerCampaignCenter .nx-create-button,
.nxContainerCampaignCenter .nx-excel-button {
   float: right;
   width: 150px;
   font-weight: 600;
}

/******* button & dialog ********/
.nx-campaign-dialog .nx-ccc-title {
   padding-left: 1.5em;
   padding-right: 0.5em;
   font-weight: 600;
}

.nx-campaign-dialog .nx-ccc-create-input {
   padding-top: 1em;
   font-size: 12px;
}

.nx-campaign-dialog .nx-separator {
   height: 1px;
   background-color: gainsboro;
   margin-top: 10px;
   margin-bottom: 10px;
}
/******* toolbar ********/

.nxContainerCampaignCenter .k-grouping-header {
   background-color: indianred;
}

.nxContainerCampaignCenter .k-header {
   background-color: #fff;
   background-image: none;
}

.nxContainerCampaignCenter .k-grid-header {
   background-color: #5a5d63;
   background-image: none;
}

.nxContainerCampaignCenter .k-grid-header th {
   background-color: #5a5d63;
   background-image: none;
   color: #fff;
}

.nxContainerCampaignCenter .k-grid-content-locked {
   border-color: #aaa;
   border-right-width: 2px;
}

.nxContainerCampaignCenter .k-grid-content {
   position: absolute;
   top: 142px;
   bottom: 0px;
}

.nxContainerCampaignCenter .k-pager-wrap {
   background-color: #5a5d63;
   background-image: none;
   color: #fff;
   position: absolute;
   width: 100%;
   height: 25px;
   bottom: 0px;
   right: 0px;
   left: 0px;
}

.nxContainerCampaignCenter a.k-link:link {
   color: #fff;
}

.nxContainerCampaignCenter tbody .k-button {
   min-width: 20px !important;
   padding-left: 10px;
   padding-right: 0px;
}

.nxContainerCampaignCenter tbody .k-state-selected {
   background-color: #fff;
   color: #2e2e2e;
   font-weight: 600;
}

.nxContainerCampaignCenter tr:hover {
   background-color: #fff;
}

.nxContainerCampaignCenter td.k-state-selected:hover, .nxContainerCampaignCenter tr.k-state-selected:hover {
   background-color: #fff;
}

/* override absolute positioning styles of the validator messages */
.nxContainerCampaignCenter .k-tooltip {
   position: static;
   margin: 7px 0px !important;
   border: 0px;
   padding: 5px 5px;
}

/* hide validator tooltip callouts */
.nxContainerCampaignCenter .k-tooltip .k-callout {
   display: none;
}
