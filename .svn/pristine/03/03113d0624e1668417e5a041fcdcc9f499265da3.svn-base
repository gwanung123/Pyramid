@font-face{font-family:roboto; src:url('../font/Roboto-Regular.ttf');}
*{margin:0; padding:0;}
*:focus{outline:none;}
li{list-style-type:none;}
img{border:0 none;}
body{
	font-family:'roboto', Arial, sans-serif;
	color:#000;
	background:linear-gradient(top, #73c5f4, #045dd5);
	background:-webkit-linear-gradient(top, #73c5f4, #045dd5);
	background:-moz-linear-gradient(top, #73c5f4, #045dd5);
	background:-o-linear-gradient(top, #73c5f4, #045dd5);
	background:-ms-linear-gradient(top, #73c5f4, #045dd5);
}
a:link, a:visited{color:#000; text-decoration:none;}
a:hover, a:focus{color:#f00; text-decoration:underline;}

/* main */
.hidden{position:absolute; left:-9999px; width:1px; height:1px; overflow:hidden; font-size:0; line-height:0;}
.container{width:260px; height:180px; margin:0 auto;}

#html{position:relative;}
#wrapper{width:100%; margin:0 auto; height:100vh;}
#main{width:100%;}
#header{width:100%; height:190px; padding-top:14%; text-align:center;}
#footer{width:100%; text-align:center;}

#header .logo{margin-bottom:15px; font-size:54px; font-weight:normal; color:#ffffff;}
#header .ver{font-size:23px; font-weight:normal; color:#ffffff;}
#header img{width:130px; position:absolute; top:40px; right:40px;}

#main form{width:260px; font-weight:normal;}
#main legend{position:absolute; left:-9999px; width:1px; height:1px; overflow:hidden; font-size:0; line-height:0;}
#main fieldset{border:0 none;}

#main form .login_id input{width:260px; height:34px; margin-bottom:4px; border:none; font-size:13px;  text-indent:10px; color:#6d6e71 !important;}

#main form .login_pw input{width:260px; height:34px; margin-bottom:10px; border:none; font-size:13px; text-indent:10px; color:#6d6e71 !important;}

#main form .check{width:260px; height:14px; line-height:14px;}
#main form .check input[type="checkbox"]{width:14px; height:14px; border:none; float:left;}
#main form .check label{font-size:13px; color:#ffffff; margin-left:8px;}

#main form #login_btn{margin-top:25px;}
#main form #login_btn input[type="button"]{width:260px; height:34px; border:none; background-color:#37cbe9; font-size:14px; color:#ffffff;}
#main form #login_btn input[type="button"]:hover{background-color:#25426e;}
#main span{font-size:11px; color:#ffffff; text-align:center;}
/*set*/
#main form #login_btn #opt{position:absolute; top:40px; left:40px; width:20px; height:20px; cursor:pointer;}

#footer img{width:90px; position:absolute; bottom:25px; left:calc(50% - 45px);}

/* option */
#opt_wrap{width:100%; height:100%; position:fixed; top:0; left:0; background-color:rgba(0,0,0,0.6); overflow-Y:scroll;}
#optionModal{width:460px; height:667px; border-radius:5px; color:#555; background-color:#ffffff; position:absolute; top:100px; left:calc(50% - 230px);}

#optionModal .modal-content .modal-header{width:100%; height:35px; border-bottom:1px solid #e9ecef;}
#optionModal .modal-content .modal-header .close{padding:10px; border:none; background-color:#ffffff; float:right; cursor:pointer;}
#optionModal .modal-content .modal-header .modal-title{float:left; font-size:18px; line-height:35px; margin-left:10px;}

#optionModal .modal-content .modal-body{padding:20px;}
#optionModal .modal-content .modal-body .option-title{margin-bottom:3px;}
#optionModal .modal-content .modal-body .option-title label{font-size:15px; margin-bottom:6px;}
#optionModal .modal-content .modal-body .input-group{width:100%; height:28px;}
#optionModal .modal-content .modal-body .input-group .input-group-addon{width:58px; height:26px; line-height:26px; float:left; border:1px solid #ccc; font-size:13px; text-align:center; background-color:#e9ecef; display:block;}
#optionModal .modal-content .modal-body .input-group .form-control{width:140px; height:26px; float:left; border:1px solid #ccc; font-size:11px; padding-left:8px;}
#optionModal .modal-content .modal-body .option-select{width:420px; height:50px; margin-bottom:3px;}
#optionModal .modal-content .modal-body .option-button{width:100%; float:left;}
#optionModal .modal-content .modal-body .option-button .btn-sm{width:45px; height:25px; float:right; font-size:11px; border:none; border-radius:3px; background-color:#ddd; margin-left:2px; margin-bottom:10px;}

#optionModal .modal-content .modal-footer{width:100%; height:60px; float:left; border-top:1px solid #ccc;}
#optionModal .modal-content .modal-footer .btn{height:30px; line-height:30px; font-size:13px; padding:0px 8px; border:none; float:right; margin-left:4px; margin-top:15px; border-radius:3px; background-color:#ddd; cursor:pointer;}
#optionModal .modal-content .modal-footer .btn.btn-primary{margin-right:20px; background-color:#007bff; color:#ffffff;}

/* error */
#errorModal{width:210px; height:100px; position:absolute; top:45%; left:calc(50% - 105px); background-color:#ffffff; border:2px solid #25426e;}
#errorModal button{width:20px; height:20px; border:none; float:right; background-color:#ffffff; cursor:pointer;}
#errorModal .modal-header p{padding-top:30px; text-align:center;}
#errorModal .modal-line-h{text-align:center;}
#errorModal .modal-line-h p{text-align:center;}

